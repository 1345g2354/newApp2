<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#69AF33"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
           android:layout_gravity="center_vertical"
            android:textColor="#fff"
            android:textSize="19sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_1"
        android:layout_weight="9"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/img_id"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            android:text="录入和修改用户信息"
            android:background="#69AF33"
            android:textColor="#fff"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/img_down"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:text="更新App"
            android:background="#69AF33"
            android:textColor="#fff"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/scan_selector"

            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="12dp"
            android:text="请点击扫码登陆"


            />
        <TextView
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/encrypted_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            android:textColor="?android:attr/colorAccent"
            android:text="@string/purchase_done"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#284147"
        android:gravity="center"
        >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="版权所有 © 溯源云（北京）科技服务有限公司  "
               android:textColor="#fff"

              />

    </LinearLayout>
</RelativeLayout>



